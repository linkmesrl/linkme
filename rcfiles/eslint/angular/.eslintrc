{
    "ecmaFeatures": {
        "blockBindings": true,
        "forOf": true,
        "destructuring": true,
        "arrowFunctions": true,
        "templateStrings": true,
        "modules": true
    },
    "env": {
        "browser": true,
        "node": true,
        "es6": true
    },
    "plugins": [
        "angular"
    ],
    "rules": {
        "quotes": [1, "single"],
        "camelcase": [1, {"properties": "always"}],
        "no-underscore-dangle": 0,
        "eqeqeq": [2, "smart"],
        "no-alert": 1,
        "key-spacing": [1, { "beforeColon": false, "afterColon": true }],
        "indent": [2, 2],
        "no-irregular-whitespace": 1,
        "eol-last": 0,
        "max-nested-callbacks": [2, 4],
        "comma-spacing": [1, {"before": false, "after": true}],
        "no-trailing-spaces": [1, { skipBlankLines: true }],
        "no-unused-vars": [1, {"vars": "all", "args": "after-used"}],
        "no-console": 2,
        "no-spaced-func": 1,
        "angular/ng_module_name": [2, '/^ideahub\.*[a-z]*$/'],
        "angular/ng_controller_name": [2, '/^[a-z].*Ctrl$/'],
        "angular/ng_service_name": [2, '/^[A-Z].*Service$/'],
        "angular/ng_directive_name": [2, '/^[a-z]+[[A-Z].*]*$/'],
        "angular/ng_provider_name": [2, '/^[A-Z][a-z]+[A-Z][a-z]+$/'],
        "angular/ng_constant_name": [2, '/^[a-z]+[A-Z]+[a-z]+$/'],
        "angular/ng_di": [0, "function or array"],
        "angular/ng_definedundefined": 0,
        "no-new": 0
    },
    "globals" :{
        "angular": true,
        "$": true,
        "SirTrevor": true,
        custom_endpoint: true
    }
}
